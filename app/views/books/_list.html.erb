        <div class="col-xs-3">
    <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-square pull-top profile-img", fallback: "no_image.jpg" %>
        <table class="left-table">
            <tr>
             <th>name</th>
             <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
        </table>
          <div class="row">
          <% if user.id == current_user.id %>
          <p>
            <%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          </p>
          <% else %>
          <p>
            <%= link_to "", user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"  %>
          </p>
          <% end %>
          </div>
          <h2>New book</h2>
          <%= form_for(book) do |f| %>
            <div class="field">
              <p>Title</p>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="field">
              <p>Opinion</p>
              <%= f.text_area :body, class: "form-control", rows:"2" %>
            </div>
            <%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
          <% end %>
    </div>
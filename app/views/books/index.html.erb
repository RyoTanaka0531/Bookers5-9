<main>
<div class="container">
  <div class="row">
  <div class="error">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj being saved: </h3>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  </div>
       <%= render 'books/list', book: @book, user: @user %>
    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
          <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: 'img-square pull-top profile-img', fallback: "no_image.jpg" %>
          <% end %> 
          </td>
          <td>
          <%= link_to "#{book.title}", book_path(book.id) %>
          </td>
          <td>
          <%= book.body %>
          </td>
        </tr>
        <% end %>
        
      </tbody>
      </table>
    </div>
  </div>
</div>
<%= render 'users/links' %>
</main>


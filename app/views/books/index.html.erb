<main>
<div class="container">
  <div class="row">
  <div class="col-xs-3" style="background-color: orange;">
    <h2>User info</h2>
        <img>
        <P>ここに写真が入ります</p>
        <table>
            <tr>
             <th>name</th>
             <th>ここに名前が入ります</th>
            </tr>
            <tr>
                <th>introduction</th>
                <th>ここに紹介が入ります</th>
            </tr>
        </table>
        <a href="books">Edit</a>
        <h2>New book</h2>
          <%= form_for(@book, url: books_path) do |f| %>
            <p>Title</p>
            <%= f.text_field :title, class: "form-control" %>
            <p>Opinion</p>
            <%= f.text_area :body, class: "form-control", rows:"2" %>
            <%= f.submit "Create Book", class: "btn btn-lg btn-block btn-base-1 mt-20" %>
          <% end %>
</div>

    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>写真</td>
          <td>
          <%= book.title %>
          </td>
          <td>
          <%= book.body %>
          </td>
        </tr>
        <% end %>
        <tr>
          <td>写真</td>
          <td>タイトル</td>
          <td>opinion</td>
        </tr>
        <tr>
          <td>写真</td>

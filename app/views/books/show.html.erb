<main>
<div class="container">
  <div class="row">
  <%= render 'books/list', book: @book_new, user: @user %>
    <div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table table-striped">
        <tbody>
          <tr>
            <td><%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-square pull-top profile-img", fallback: "no_image.jpg" %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user.id == current_user.id %>
                <%= link_to "Edit",edit_book_path %></td>
              <% end %>
            <td>
              <% if @book.user.id == current_user.id %>
               <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
</main>

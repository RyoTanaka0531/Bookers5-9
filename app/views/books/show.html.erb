<main>
<div class="container">
  <div class="row">
  <p id="notice">
    <%= notice %>
  </p>
  <%= render 'books/list', book: @book_new, user: @user %>
    <div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
            <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-square pull-top profile-img", fallback: "no_image.jpg" %>
              <p><%= @user.name %></p>
            <% end %>
            </td>
            <td><%= link_to "#{@book.title}" %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user.id == current_user.id %>
                <%= link_to "Edit",edit_book_path, class: "btn-sm btn-success" %>
              <% end %>
            <td>
              <% if @book.user.id == current_user.id %>
               <%= link_to "Destroy", book_path(@book), class: "btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render 'users/links'%>
</main>

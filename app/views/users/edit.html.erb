
<main>
<div class="container">
<h2>User info</h2>
  <div class="error">
    <% if @user.errors.any? %>
      <div id="error_explanation" style="color: red;">
          <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj being saved: </h3>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end%>
  </div>

  <%= form_for(@user) do |f| %>
    <div class="field">
      <label>Name</label>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <label>Image</label>
      <%= f.attachment_field :profile_image %>
    </div>
    <div class="field">
      <label>Introduction</label>
      <%= f.text_area :introduction %>
    </div>
    <div class="field">
    <p><%= f.submit "Update User" %></p>
    </div>
<% end %>
</div>
<%= render 'users/links'%>
</main>

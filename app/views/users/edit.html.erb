
<main>
<div class="container">
<h2>User info</h2>
  <%= form_for(@user) do |f| %>
    <div class="edit">
      <label>Name</label>
      <%= f.text_field :name %>
    </div>
    <div class="edit">
      <label>Image</label>
      <%= f.attachment_field :profile_image %>
    </div>
    <div class="edit">
      <label>Introduction</label>
      <%= f.text_area :introduction %>
    </div>
    <div class="edit">
    <p><%= f.submit "Update User" %></p>
    </div>
<% end %>
</div>
</main>

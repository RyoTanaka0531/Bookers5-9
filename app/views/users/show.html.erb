<main>
<div class="container">
  <div class="row">
  <p id="notice">
    <%= notice %>
  </p>
   <%= render 'books/list', book: @book, user: @user %>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
          <%= link_to user_path(@user.id) do %>
           <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-square pull-top profile-img", fallback: "no_image.jpg" %>
          <% end %>
          </td>
          <td><%= link_to "#{book.title}", book_path(book.id) %></td>
          <td><%= book.body%></td>
        </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>
<%= render 'users/links' %>
</main>

<main>
<div class="container">
  <div class="row">
  <%= render 'books/list', book: @book, user: @user %>
    <div class="col-xs-9">
      <h1>Users</h1>
      <table class="table table-striped">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-square pull-top profile-img", fallback: "no_image.jpg"%>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
      <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>
</main>
